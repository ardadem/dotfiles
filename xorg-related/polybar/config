[colors]
;background = ${xrdb:color0:#222}
background = #66222222
background-alt = #66444444
;foreground = ${xrdb:color7:#222}
foreground = #fff
foreground-alt = #666
module-prefix = #000
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/main]
width = 100%
height = 24
bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = Roboto:size=11:weight=bold;2
font-1 = unifont:fontformat=truetype:size=10;3

modules-left = bspwm
modules-right = cpu memory filesystem pulseaudio battery date

tray-position = right
tray-padding = 2
tray-offset-y = -1
tray-maxsize = 15

wm-restack = bspwm

;override-redirect = true

cursor-click = pointer
cursor-scroll = ns-resize

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2

[module/network]
type = internal/network
interface = enp0s31f6
interval = 0.5

format-connected = <label-connected>

label-connected = "%{F#92b91d}down:%{F-} %downspeed%   %{F#92b91d}up:%{F-} %upspeed%"

[module/battery]
type = internal/battery

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT1
adapter = ADP1

poll-interval = 5

label-charging = "%{F#92b91d}charging:%{F-} %percentage%%"
label-discharging = "%{F#92b91d}discharging:%{F-} %percentage%%"

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "cpu: "
format-prefix-foreground = #b41db9
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "ram: "
format-prefix-foreground = #1d85b9
label = %percentage_used%%

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#b91d2f}root:%{F-} %percentage_used%%

[module/pulseaudio]
type = internal/pulseaudio

format-volume-prefix = "vol: "
format-volume-prefix-foreground = #b9781d
format-volume = <label-volume> <bar-volume>
label-volume = "%percentage%%"
label-volume-foreground = ${root.foreground}
label-muted = "muted %percentage%%"
label-muted-foreground = ${colors.alert}

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = I
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 1

date-alt = %Y-%m-%d

time = %H:%M:%S

format-prefix = "date: "
format-prefix-foreground = #1db98a

label = %date% %time%

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

; vim:ft=dosini
